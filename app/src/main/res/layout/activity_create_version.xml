<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".com.emily.planet.CreateVersionActivity">

    <include layout="@layout/toolbar_create_version" />

    <ScrollView
        android:id="@+id/sv_root"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:fitsSystemWindows="true">

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="24dp"
            android:paddingRight="24dp"
            android:paddingTop="56dp">

            <!-- Name Label -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:layout_marginTop="8dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="版本:"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_size_xxxl"
                    tools:ignore="TextFields" />


                <EditText
                    android:id="@+id/et_input_version"
                    style="@style/et_style"
                    android:layout_marginStart="8dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/version"
                    tools:ignore="TextFields" />
            </LinearLayout>

            <!-- Password Label -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:layout_marginTop="8dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="状态:"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_size_xxxl" />

                <EditText
                    android:id="@+id/et_input_status"
                    style="@style/et_style"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:hint="To be Test"
                    tools:ignore="TextFields" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="描述:"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_size_xxxl" />

                <EditText
                    android:id="@+id/et_description"
                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    android:layout_marginStart="6dp"
                    android:layout_marginTop="8dp"
                    android:gravity="start"
                    android:inputType="textMultiLine"
                    android:background="@drawable/shape_item_topic"
                    android:textAlignment="viewStart" />
            </LinearLayout>

            <android.support.v7.widget.AppCompatButton
                android:id="@+id/btn_version_submit"
                style="@style/btn_style"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                android:layout_marginTop="24dp"
                android:padding="12dp"
                android:text="@string/submit"
                android:textColor="@color/white" />


        </LinearLayout>
    </ScrollView>

</LinearLayout>