<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".com.emily.planet.TicketActivity">

    <include layout="@layout/toolbar_ticket"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:ignore="UselessParent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/shape_item_topic"
            android:orientation="vertical"
            android:padding="12dp">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="问题类型："
                    android:textSize="@dimen/text_size_l" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="10.0dip"
                    android:contentDescription="@string/hello"
                    android:src="@mipmap/ic_common_red_point" />

                <EditText
                    android:id="@+id/et_required"
                    android:layout_width="match_parent"
                    android:layout_height="38dp"
                    android:layout_marginStart="6dp"
                    android:background="@drawable/shape_item_topic" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="问题概述："
                    android:textSize="@dimen/text_size_l" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="10.0dip"
                    android:contentDescription="@string/hello"
                    android:src="@mipmap/ic_common_red_point" />

                <EditText
                    android:id="@+id/et_summary"
                    android:layout_width="match_parent"
                    android:layout_height="38dp"
                    android:layout_marginStart="6dp"
                    android:background="@drawable/shape_item_topic" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="详细描述："
                    android:textSize="@dimen/text_size_l" />

                <MultiAutoCompleteTextView
                    android:id="@+id/et_des"
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:layout_marginStart="6dp"
                    android:background="@drawable/shape_item_topic"
                    android:textAlignment="viewStart" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="期待结果："
                    android:textSize="@dimen/text_size_l" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="10.0dip"
                    android:contentDescription="@string/hello"
                    android:src="@mipmap/ic_common_red_point" />

                <MultiAutoCompleteTextView
                    android:id="@+id/et_result"
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:layout_marginStart="6dp"
                    android:background="@drawable/shape_item_topic"
                    android:textAlignment="viewStart" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="版本："
                    android:textSize="@dimen/text_size_l" />

                <EditText
                    android:id="@+id/et_version"
                    android:layout_width="match_parent"
                    android:layout_height="38dp"
                    android:layout_marginStart="6dp"
                    android:background="@drawable/shape_item_topic" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="优先级："
                    android:textSize="@dimen/text_size_l" />

                <EditText
                    android:id="@+id/et_priority"
                    android:layout_width="match_parent"
                    android:layout_height="38dp"
                    android:layout_marginStart="6dp"
                    android:background="@drawable/shape_item_topic" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="问题解决者："
                    android:textSize="@dimen/text_size_l" />

                <EditText
                    android:id="@+id/et_assignee"
                    android:layout_width="match_parent"
                    android:layout_height="38dp"
                    android:layout_marginStart="6dp"
                    android:background="@drawable/shape_item_topic" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="vertical">

                <android.support.v7.widget.AppCompatButton
                    android:id="@+id/btn_submit"
                    style="@style/btn_style"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="24dp"
                    android:layout_marginTop="24dp"
                    android:padding="12dp"
                    android:text="Create Issue"
                    android:textColor="@color/white" />
            </LinearLayout>

        </LinearLayout>


    </ScrollView>


</LinearLayout>