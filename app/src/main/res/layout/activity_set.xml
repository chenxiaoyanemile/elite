<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".com.emily.my.SetActivity">

    <include layout="@layout/toolbar_setting"/>

    <LinearLayout
        android:id="@+id/ly_setting"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/option_item_height"
        android:layout_marginTop="20.0dip"
        android:background="@drawable/sel_bg_foreground_for_white_item"
        android:foreground="@drawable/sel_touch_foreground"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20.0dip"
            android:drawablePadding="10.0dip"
            android:gravity="center_vertical"
            android:text="@string/nickname"
            android:textColor="@color/dark_black"
            android:textSize="@dimen/text_size_l" />

        <android.support.v4.widget.Space
            android:layout_width="0.0dip"
            android:layout_height="1.0dip"
            android:layout_weight="1.0" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10.0dip"
            android:contentDescription="@string/hello"
            android:text="@string/app_name" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="20.0dip"
            android:contentDescription="@string/hello"
            android:src="@mipmap/ic_common_entrance_arrow" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ly_set_clean"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/option_item_height"
        android:layout_marginTop="20.0dip"
        android:background="@drawable/sel_bg_foreground_for_white_item"
        android:foreground="@drawable/sel_touch_foreground"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20.0dip"
            android:drawablePadding="10.0dip"
            android:gravity="center_vertical"
            android:text="@string/clear_cache"
            android:textColor="@color/dark_black"
            android:textSize="@dimen/text_size_l" />

        <android.support.v4.widget.Space
            android:layout_width="0.0dip"
            android:layout_height="1.0dip"
            android:layout_weight="1.0" />

        <TextView
            android:id="@+id/tv_cache_size"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10.0dip"
            android:contentDescription="@string/hello"
            android:text="@string/cache" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="20.0dip"
            android:contentDescription="@string/hello"
            android:src="@mipmap/ic_common_entrance_arrow" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ly_set_version"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/option_item_height"
        android:layout_marginTop="20.0dip"
        android:background="@drawable/sel_bg_foreground_for_white_item"
        android:foreground="@drawable/sel_touch_foreground"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20.0dip"
            android:drawablePadding="10.0dip"
            android:gravity="center_vertical"
            android:text="@string/check_update"
            android:textColor="@color/dark_black"
            android:textSize="@dimen/text_size_l" />

        <android.support.v4.widget.Space
            android:layout_width="0.0dip"
            android:layout_height="1.0dip"
            android:layout_weight="1.0" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10.0dip"
            android:contentDescription="@string/hello"
            android:src="@mipmap/ic_common_red_point" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="20.0dip"
            android:contentDescription="@string/hello"
            android:src="@mipmap/ic_common_entrance_arrow" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ly_set_origin"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/option_item_height"
        android:layout_marginTop="20.0dip"
        android:background="@drawable/sel_bg_foreground_for_white_item"
        android:foreground="@drawable/sel_touch_foreground"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20.0dip"
            android:drawablePadding="10.0dip"
            android:gravity="center_vertical"
            android:text="@string/app_story"
            android:textColor="@color/dark_black"
            android:textSize="@dimen/text_size_l" />

        <android.support.v4.widget.Space
            android:layout_width="0.0dip"
            android:layout_height="1.0dip"
            android:layout_weight="1.0" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10.0dip"
            android:contentDescription="@string/hello"
            android:src="@mipmap/ic_common_red_point" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="20.0dip"
            android:contentDescription="@string/hello"
            android:src="@mipmap/ic_common_entrance_arrow" />
    </LinearLayout>

    <android.support.v7.widget.AppCompatButton
        android:id="@+id/btn_registered"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="48dp"
        android:padding="12dp"
        android:text="@string/logout"
        style="@style/btn_style"
        android:textColor="@color/white"/>

</LinearLayout>