<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginStart="16dp"
    android:layout_marginTop="16dp">

        <LinearLayout
            android:layout_width="160dp"
            android:layout_height="180dp"
            android:background="@drawable/shape_item_topic"
            android:orientation="vertical"
            tools:ignore="UselessParent">

            <ImageView
                android:id="@+id/iv_planet_avatar"
                android:layout_width="160dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:contentDescription="@string/topic"
                android:src="@mipmap/topic_03_1x" />

            <TextView
                android:id="@+id/tv_planet_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="8dp"
                android:text="@string/planet_name_02"
                android:textSize="@dimen/text_size_xl"/>

            <TextView
                android:layout_width="16dp"
                android:layout_height="1dp"
                android:layout_gravity="center"
                android:background="@color/light_gray" />

            <TextView
                android:id="@+id/tv_planet_founder"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="6dp"
                android:text="@string/app_name"
                android:textSize="@dimen/text_size_l"/>
        </LinearLayout>



</RelativeLayout>