<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_all">

    <de.hdodenhof.circleimageview.CircleImageView
        style="@style/Avatar"
        android:id="@+id/cv_members_avatar"
        android:layout_width="46.0dip"
        android:layout_height="46.0dip"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:src="@mipmap/im_me" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_marginStart="79dp"
        android:layout_marginTop="10dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_members_username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/name_collecton"
            android:textColor="@color/black_333333"
            android:textSize="@dimen/text_size_xxl" />

        <TextView
            android:id="@+id/tv_members_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/user_phone" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/gray"
        android:layout_marginTop="6dp"
        android:layout_below="@+id/cv_members_avatar"/>


</RelativeLayout>